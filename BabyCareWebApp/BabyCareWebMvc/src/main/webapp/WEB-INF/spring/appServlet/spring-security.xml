<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 http://www.springframework.org/schema/security
 http://www.springframework.org/schema/security/spring-security-3.2.xsd">
	<http auto-config="true" use-expressions="true">
		<access-denied-handler error-page="/403page" />
		<intercept-url pattern="/main/**" access="hasAnyRole('ROLE_ADMIN','ROLE_USER')" />
		<form-login login-page='/login' username-parameter="username"
			password-parameter="password" default-target-url="/"
			authentication-failure-url="/login?authfailed" />

		<logout logout-success-url="/login?logout" />

		<!-- enable csrf protection -->
		<csrf />

	</http>
	
	<!-- MySQL DB DataSource -->
    <beans:bean id="dataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource">
 
        <beans:property name="driverClassName" value="oracle.jdbc.OracleDriver" />
        <beans:property name="url"
            value="jdbc:oracle:thin:@localhost:1521:XE" />
        <beans:property name="username" value="UCPB" />
        <beans:property name="password" value="ucpbuser" />
    </beans:bean>

	<!-- Select users and user_roles from database -->

	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="md5" />
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="SELECT u.email as USERNAME, u.password as PASSWORD, 'true' AS enabled FROM UCPB_USER WHERE USERNAME=?"
				authorities-by-username-query="SELECT r.username,r.name FROM UCPB_ROLE r WHERE r.username=? " />
		</authentication-provider>
		<authentication-provider>
			<password-encoder hash="md5" />
			<user-service>
				<!-- role admin with admin as username and admin as password -->
				<user name="admin" password="21232f297a57a5a743894a0e4a801fc3"
					authorities="ROLE_ADMIN" />
				<!-- role user with user as username and user as password -->
				<user name="user" password="ee11cbb19052e40b07aac0ca060c23ee"
					authorities="ROLE_USER" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>